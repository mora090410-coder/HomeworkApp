{
  "meta": {
    "brand_name": "HomeWork",
    "description": "Core design tokens for HomeWork brand."
  },
  "colors": {
    "brand": {
      "photon_white": "#FFFFFF",
      "vapor_grey": "#F3F4F6",
      "obsidian": "#111827",
      "neutral_text": "#6B7280"
    },
    "semantic": {
      "success": "#10B981",
      "destructive": "#EF4444"
    },
    "gradients": {
      "momentum_start": "#3B82F6",
      "momentum_end": "#F97316"
    }
  },
  "typography": {
    "font_family_sans": [
      "-apple-system",
      "BlinkMacSystemFont",
      "SF Pro",
      "Helvetica Neue",
      "sans-serif"
    ],
    "weights": {
      "regular": 400,
      "medium": 500,
      "bold": 700,
      "heavy": 800
    },
    "scale": {
      "h1": {
        "size": "3rem",
        "line_height": "1.05",
        "letter_spacing": "-0.02em"
      },
      "h2": {
        "size": "2.25rem",
        "line_height": "1.10",
        "letter_spacing": "-0.015em"
      },
      "h3": {
        "size": "1.75rem",
        "line_height": "1.15",
        "letter_spacing": "-0.01em"
      },
      "h4": {
        "size": "1.375rem",
        "line_height": "1.20",
        "letter_spacing": "-0.005em"
      },
      "body": {
        "size": "1rem",
        "line_height": "1.5"
      },
      "small": {
        "size": "0.875rem",
        "line_height": "1.45"
      },
      "caption": {
        "size": "0.75rem",
        "line_height": "1.35"
      }
    }
  },
  "ui": {
    "border_radius_card": "12px",
    "border_width_card": "1px",
    "shadows": {
      "soft_ambient": "0 20px 40px -10px rgba(0,0,0,0.1)"
    }
  }
}